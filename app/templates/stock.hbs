<div class="row">
    <div class="col-md-12">
        <h4>{{name}}</h4>
    </div>
    <div class="col-md-12">
        <form class="form-horizontal"  role="form">
            <div class="form-group">
                    <label class="col-md-4 control-label">Time frame</label>
                    <div class="col-md-8">
                        {{ view Ember.Select
                        content= timeframeOptions
                        optionValuePath="content.value"
                        optionLabelPath="content.name"
                        selection=timeframeSelected
                        classNames="form-control" }}
                    </div>
            </div>
        </form>
    </div>
    <div class="col-md-12">
        <hr/>
    </div>
    <div class="col-md-12">
        {{c3-chart
            data=chartInfo
            axis=axis}}
    </div>
    <div class="col-md-12">
        <hr/>
    </div>
    <div class="col-md-12">
        <blockquote>
            <p>{{ description }}</p>
            <footer>Source <cite title="{{source_name}}">{{source_name}}</cite></footer>
        </blockquote>
        <a {{ bind-attr href=display_url }} target="_blank" ">More Info</a>
    </div>
</div>